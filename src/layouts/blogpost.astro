---
import Main from "./main.astro";

const { frontmatter } = Astro.props;
---

<style is:global>
    article {
        a {
            @apply underline hover:text-blue-700 dark:hover:text-amber-400;
        }

        h1 {
            @apply text-4xl my-4;
        }

        h2 {
            @apply text-3xl my-3;
        }

        h3 {
            @apply text-2xl my-3;
        }

        h4 {
            @apply text-xl my-3;
        }

        h5 {
            @apply text-lg my-3;
        }

        .astro-code {
            @apply p-8 my-8;
        }

        svg {
            @apply my-8 mx-auto;
        }

        ul {
            @apply list-disc list-inside my-4;

            ul {
                @apply list-[circle] list-inside ml-4 my-0;
            }
        }
    }
</style>

<Main title={frontmatter.title}>
    <div class="container mx-auto my-24 h-auto">
        <header class="my-16">
            <h1 class="text-center text-4xl">{frontmatter.title}</h1>
            <div class="text-center my-2 align-center">
                <span>Date: </span>
                <time
                    class="text-blue-700 dark:text-amber-400"
                    datetime={frontmatter.pubDate}
                    >{frontmatter.pubDate.toLocaleDateString()}</time
                >
            </div>
            {
                frontmatter.updateDate && (
                    <div class="text-center my-2 align-center">
                        <span>Updated: </span>
                        <time
                            class="text-blue-700 dark:text-amber-400"
                            datetime={frontmatter.updateDate}
                        >
                            {frontmatter.updateDate.toLocaleDateString()}
                        </time>
                    </div>
                )
            }
            <div class="text-center my-2 align-center">
                {frontmatter.description}
            </div>
        </header>
        <hr />
        <div class="my-8">
            <slot />
        </div>
    </div>
</Main>
